{
    // Workbench settings
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.startupEditor": "none",

    // Editor customisation
    "editor.fontFamily": "Fira Code", // https://github.com/tonsky/FiraCode/releases
    "editor.tabSize": 4,

    // Editor formatting setting
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // Prettier settings
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "all",
    "prettier.arrowParens": "always",
    "prettier.printWidth": 80,
    "prettier.useTabs": false,
    "prettier.semi": false,

    // Git settings
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.ignoreRebaseWarning": true,

    // Live server settings
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.CustomBrowser": "chrome",

    // Explorer settings
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // Accessibility Settings
    "editor.accessibilitySupport": "off",

    // Import Updates on File Move Settings
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",

    // Code Actions on Save Settings
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },

    // Files and folder exlude
    "files.exclude": {
        "**/.expo": true
    }
}
